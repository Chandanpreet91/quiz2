<h1>  All Ideas </h1>
<div class = "row">
    <div class= "col-2">
    </div>
    <div class = "col-10">
        <% @ideas.each do |idea|%>
        <div>
            <h2><%= link_to idea.title, idea_path(idea) %></h2>
        </div>
            <p>
                <%= idea.description %>
            </p>
            <p>By <%= link_to  idea.user.full_name, idea_path(idea) %>
            <% if @like.present? %>
              <%= link_to  "Liked", root_path(@like),method: :delete %>
            <%else%>
            <%= link_to  "Like", index_root_path(idea),method: :post %>
             <% end %>
            
            <small>Liked by: <%= idea.likes.count %> </small>
            </p>
        <% end %>
       
    </div>
</div>