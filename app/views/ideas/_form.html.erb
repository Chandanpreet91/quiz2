<% if @idea.errors.any? %>
    <ul>
        <% @idea.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>
<%= form_with model: @idea, local: true do |f| %>
<div class= "form-group">
    <%= f.label :title%>
    <%= f.text_field :title ,class:'form-control'%>
</div>
<div class= "form-group">
    <%= f.label :description%>
    <%= f.text_area :description ,class:'form-control',cols: 50,rows: 5%>
</div>
<%= f.submit %>
<% end %>